<?xml version="1.0" encoding="utf-8" ?>
<widget id="itvisors.nativeplatformwidget.NativePlatformWidget" pluginWidget="true" needsEntityContext="true" offlineCapable="true"
        supportedPlatform="Native"
        xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Native Platform Widget</name>
    <description>Show content specific for a platform</description>
    <icon>
    </icon>
    <properties>
        <propertyGroup caption="General">
            <property key="iosContent" type="widgets">
                <caption>iOS content (any device)</caption>
                <description>Widgets to show for iOS, any device</description>
            </property>
            <property key="iosTabletContent" type="widgets" required="false">
                <caption>iOS iPad content, optional</caption>
                <description>Widgets to show for iPad, optional, iOS content (any device) is shown when empty</description>
            </property>
            <property key="androidContent" type="widgets">
                <caption>Android content (any device)</caption>
                <description>Widgets to show for Android, any device</description>
            </property>
            <property key="androidTabletContent" type="widgets" required="false">
                <caption>Android tablet content, optional</caption>
                <description>Widgets to show for Android tablets, optional, Android content (any device) is shown when empty</description>
            </property>
        </propertyGroup>
    </properties>
</widget>
